{
  "name": "transactional-outbox",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npm --prefix ../common install",
    "build": "shx rm -rf ./dist && tsc",
    "start": "docker-compose up --build",
    "prestart": "npm run build",
    "start:producer": "node dist/transactional-outbox/src/producer/server.js",
    "start:relay": "node dist/transactional-outbox/src/producer/relay.js",
    "start:receiver": "node dist/transactional-outbox/src/receiver/server.js",
    "start:dev:producer": "nodemon -e ts --watch src --exec 'npx ts-node ./src/producer/server.ts'",
    "start:dev:relay": "nodemon -e ts --watch src --exec 'npx ts-node ./src/receiver/relay.ts'",
    "start:dev:receiver": "nodemon -e ts --watch src --exec 'npx ts-node ./src/receiver/server.ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^7.4.3",
    "axios": "^0.21.3",
    "correlation-id": "^3.1.0",
    "dotenv": "^8.2.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "0.0.16",
    "koa-helmet": "^4.1.0",
    "koa-router": "^7.4.0",
    "module-alias": "^2.2.2",
    "needle": "^2.6.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.1",
    "source-map-support": "^0.5.12",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/correlation-id": "^2.1.0",
    "@types/dotenv-safe": "^5.0.3",
    "@types/hapi__boom": "^7.4.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-helmet": "^6.0.2",
    "@types/koa-router": "^7.0.40",
    "@types/needle": "^2.5.1",
    "@types/node": "^12.0.3",
    "@types/sequelize": "^4.28.9",
    "@types/uuid": "^8.3.0",
    "nodemon": "^1.19.1",
    "shx": "^0.3.3",
    "ts-node": "^9.1.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "typescript": "^3.5.1"
  },
  "_moduleAliases": {
    "@common"      : "dist/common"
  }
}
